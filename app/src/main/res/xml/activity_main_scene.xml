<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/menu1"
        app:constraintSetEnd="@id/menu2" />

    <Transition
        app:constraintSetStart="@+id/menu2"
        app:constraintSetEnd="@id/menu1" />

    <Transition
        app:constraintSetStart="@+id/menu1"
        app:constraintSetEnd="@id/menu3" />

    <Transition
        app:constraintSetEnd="@id/menu3"
        app:constraintSetStart="@+id/menu1" />

    <Transition
        app:constraintSetEnd="@id/menu2"
        app:constraintSetStart="@+id/menu3" />

    <Transition
        app:constraintSetEnd="@id/menu3"
        app:constraintSetStart="@+id/menu2" />

    <ConstraintSet android:id="@+id/menu1">
        <Constraint android:id="@id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint android:id="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title1"
            app:layout_constraintBottom_toTopOf="@id/title2"/>

        <Constraint android:id="@id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/layout2"/>

        <Constraint android:id="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toTopOf="@id/title3"/>

        <Constraint android:id="@id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/layout3"/>

        <Constraint android:id="@id/layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/menu2">
        <Constraint android:id="@id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>

        <Constraint android:id="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/title1"/>

        <Constraint android:id="@id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout1"/>

        <Constraint android:id="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title2"
            app:layout_constraintBottom_toTopOf="@id/title3"/>

        <Constraint android:id="@id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/layout3"/>

        <Constraint android:id="@id/layout3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/menu3">
        <Constraint android:id="@id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"/>
        <Constraint android:id="@id/layout1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/title1"/>
        <Constraint android:id="@id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout1"/>
        <Constraint android:id="@id/layout2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/title2"/>
        <Constraint android:id="@id/title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout2"/>
        <Constraint android:id="@id/layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title3"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>


</MotionScene>
